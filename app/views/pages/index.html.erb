<div class="text-center p-4 bg-danger text-white">
    <h1>El blog de los posteos perdidos</h1>
</div>

<form action="<%= posts_create_path  %>" class="container pt-5" id="create_post">
  <div class="form-group">
    <label for="title">title</label>
    <input name="title" type="text" class="form-control" id="title" required>
  </div>
  <div class="form-group">
    <label for="content">content</label>
    <input name="content" type="text" class="form-control" id="content">
  </div>
  <div class="form-group">
    <label for="image_url">image_url</label>
    <input name="image_url" type="url" class="form-control" id="image_url">
  </div>
  <div class="text-center pt-5">
    <button type="submit" class="btn btn-primary">Enviar</button>
  </div>
</form>

<table class="table container mt-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">content</th>
      <th scope="col">image_url</th>
      <th scope="col">created_at</th>
    </tr>
  </thead>
  <tbody>
    <% @post.each do |post| %>
        <tr>
            <th scope="row"><%= post.id %></th>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><img src="<%= post.image_url %>" alt="<%= post.image_url %>" width="50px"  height="50px"></td>
            <td><%= post.created_at %></td>
        </tr>
    <% end %>
  </tbody>
</table>
